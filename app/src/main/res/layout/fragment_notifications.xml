<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.screen.connection.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Koneksimu"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="16dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemFriend"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:padding="16dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/your_connection"
                            android:src="@drawable/avatar1" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/item_friend1"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemFriend2"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:padding="16dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/your_connection"
                            android:src="@drawable/avatar2" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/item_friend2"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemFriend3"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:padding="16dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/your_connection"
                            android:src="@drawable/avatar4" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/item_friend3"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemFriend4"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    app:cardCornerRadius="10dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/your_connection"
                            android:src="@drawable/avatar4" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/item_friend4"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Saran Untukmu"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/friendRecommend1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/iv_profile1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/company_logo2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar4" />
                    <TextView
                        android:id="@+id/tv_username1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_toEndOf="@id/iv_profile1"
                        android:text="@string/item_friend5"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_position1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_username1"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="6dp"
                        android:layout_toEndOf="@id/iv_profile1"
                        android:text="@string/position1" />
                    <Button
                        android:id="@+id/btnFollow"
                        style="@style/Widget.Material3.Button.IconButton.Outlined"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_position1"
                        android:layout_marginStart="185dp"
                        android:layout_marginTop="-45dp"
                        android:layout_toEndOf="@id/iv_profile1"
                        android:text="@string/btn_follow"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/friendRecommend2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/iv_profile2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/company_logo2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar5" />
                    <TextView
                        android:id="@+id/tv_username2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_toEndOf="@id/iv_profile2"
                        android:text="@string/item_friend6"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_position3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_username2"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="6dp"
                        android:layout_toEndOf="@id/iv_profile2"
                        android:text="@string/position1" />
                    <Button
                        android:id="@+id/btnFollow2"
                        style="@style/Widget.Material3.Button.IconButton.Outlined"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_position3"
                        android:layout_marginStart="185dp"
                        android:layout_marginTop="-45dp"
                        android:layout_toEndOf="@id/iv_profile2"
                        android:text="@string/btn_follow"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/friendRecommend3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="110dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/iv_profile3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/company_logo2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar6" />
                    <TextView
                        android:id="@+id/tv_username3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_toEndOf="@id/iv_profile3"
                        android:text="@string/item_friend7"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_position4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_username3"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="6dp"
                        android:layout_toEndOf="@id/iv_profile3"
                        android:text="@string/position3" />
                    <Button
                        android:id="@+id/btnFollow3"
                        style="@style/Widget.Material3.Button.IconButton.Outlined"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_position4"
                        android:layout_marginStart="185dp"
                        android:layout_marginTop="-45dp"
                        android:layout_toEndOf="@id/iv_profile3"
                        android:text="@string/btn_follow"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>